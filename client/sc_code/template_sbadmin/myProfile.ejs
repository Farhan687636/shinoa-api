<div class="container-fluid justify-content-center d-flex align-items-center" style="height: 80%">
  <div class="card shadow border-bottom-secondary" style="width: 50%">
    <div class="card-body">
      <div class="text-center">
        <h5 class="card-title">username : <%= user.username %></h5>
        <p class="card-text">email : <%= user.email %></p>
        <h6 class="card-subtitle mb-2 text-muted">member since <%= JSON.stringify(user.date).slice(1, 11) %></h6>
      </div>
      <div class="d-flex justify-content-between align-items-end mt-5">
        <a href="#" class="card-link btn btn-secondary btn-icon-split">
          <span class="icon text-white-50">
            <i class="fas fa-arrow-right"></i>
          </span>
          <span class="text">Edit profile</span>
        </a>
        <% if (user.email == process.env.OWNER) { %>
        <a href="/user" class="card-link btn btn-secondary btn-icon-split">
          <span class="text">List pengguna</span>
          <span class="icon text-white-50">
            <i class="fas fa-arrow-left"></i>
          </span>
        </a>
        <% } %>
      </div>
    </div>
  </div>
</div>
