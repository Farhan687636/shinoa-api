<div class="container-fluid">
    <!-- <a target="_blank" href="https://github.com/QUERY-GANI/shinoa-api"><i class="fab fa-github"></i> Github</a> -->
    <div class="row">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Your IP</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= ip %></div>
                        </div>
                        <div class="col-auto">
                        <i class="fas fa-map-marked-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Your system</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= sysInformation[1] %></div>
                        </div>
                        <div class="col-auto">
                        <i class="fas fa-cogs fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Your browser</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= browser %></div>
                        </div>
                        <div class="col-auto">
                            <% if (browser.startsWith('Firefox')) { %>
                                <i class="fab fa-2x text-gray-300 fa-firefox-browser"></i>
                            <% } else if (browser.startsWith('Chrome')) { %>
                                <i class="fab fa-2x text-gray-300 fa-chrome"></i>
                            <% } else if (browser.startsWith('Safari')) { %>
                                <i class="fab fa-2x text-gray-300 fa-safari"></i>
                            <% } else if (browser.startsWith('Edge')) { %>
                                <i class="fab fa-2x text-gray-300 fa-edge"></i>
                            <% } else { %>
                                <i class="fab fa-2x text-gray-300 fa-internet-explorer"></i>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-gray text-uppercase mb-1">User Information</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Email <span class="text-gray-600"><%= user.username %></span></div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Username <span class="text-gray-600"><%= user.email %></span></div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Member since <span class="text-gray-600"><%= JSON.stringify(user.date).slice(1, 11) %></span></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user fa-2x text-gray-400"></i>
                        </div>
                    </div>
                    <div class="row no-gutters align-items-center mt-5">
                        <div class="col-md mb-4">
                            <a href="/user/edit" class="card-link btn btn-secondary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-arrow-right"></i>
                            </span>
                            <span class="text">Edit profile</span>
                            </a>
                        </div>
                        <% if (user.email == process.env.OWNER) { %>
                        <div class="col-md-auto mb-4">
                            <a href="/user" class="card-link btn btn-secondary btn-icon-split">
                            <span class="text">List pengguna</span>
                            <span class="icon text-white-50">
                                <i class="fas fa-arrow-left"></i>
                            </span>
                            </a>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>